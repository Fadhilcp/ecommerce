
<!-- setting header -->
<%- include("../../views/partials/admin/header") %>

<section class="content-main">
    <div class="content-header">
        <div>
            <h2 class="content-title card-title">Category List</h2>
            <p>Add,Edit and Delete Categories</p>
        </div>
    </div>
    <div class="row">
        <div class="col-md-9">
            <div class="card mb-4">
                <header class="card-header">
                    <div class="row gx-3">
                        <div class="col-lg-4 col-md-6 me-auto">
                            <input type="text" placeholder="Search..." class="form-control" />
                        </div> 
                    </div>
                </header>
                <!-- card-header end// -->
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th class="text-center">Name</th>
                                    <th class="text-center">Description</th>
                                    <th class="text-center">Offer Price</th>
                                    <th class="text-center">Offer</th>
                                    <th class="text-center">Status</th>
                                    <th class="text-center">List/Unlist</th>
                                    <th class="text-end">Edit</th>
                                </tr>
                            </thead>
                            <tbody>
                                <%if(cat.length > 0){%>
                                <%cat.reverse().forEach((category,Index)=>{%>
                                <tr>
                                    <td class="text-center"><%=category.name%></td>
                                    <td class="text-center"><%=category.description%></td>
                                        <td class="text-center">
                                            <%if(category.categoryOffer != 0){%>
                                                <%= category.categoryOffer+'%' %>
                                            <%}else{%>
                                                0%
                                                <%}%>
                                        </td>
                                    <td class="text-center">
                                        <%if(category.categoryOffer === 0){%>
                                            <button class="btn btn-success" style="height: 30px;">
                                                <a class="text-white" onclick="return addOffer('<%=category._id%>')" style="font-size: smaller;" >Add Offer</a>
                                            </button>
                                            <%}else{%>
                                                <button class="btn btn-danger" style="height: 30px;">
                                                    <a class="text-white" onclick="return removeOffer('<%=category._id%>')" style="font-size: smaller;" >Remove</a>
                                                </button>
                                                <%}%>
                                    </td>
                                    <td class="text-center">
                                        <%if(category.isListed){%>
                                        <span class="badge rounded-pill alert-success" style="width: 60px;">Listed</span>
                                       <% } else {%>
                                        <span class="badge rounded-pill alert-danger" style="width: 60px;">Unlisted</span>
                                       <% } %>
                                    </td>
                                    <td class="text-center">
                                        <% if(category.isListed){%>
                                        <button class="btn btn-danger" style="height: 30px;">
                                            <a onclick="return listCategory('<%=category._id%>')" class="text-white">Unlist</a>
                                        </button>
                                        <% } else {%> 
                                            <button class="btn btn-success" style="height: 30px;">
                                                <a onclick="return UnlistCategory('<%=category._id%>')" class="text-white">List</a>
                                            </button> 
                                        <%}%>
                                    </td>

                                    <td>
                                        <button class="btn btn-info" style="height: 30px;">
                                            <a href="/admin/editCategory?id=<%= category._id %>" class="text-white">Edit</a>
                                        </button> 
                                    </td>

                                    
                                </tr>    
                                <%})%>
                                <%}%>
                            </tbody>
                        </table>
                    </div>
                    <!-- table-responsive //end -->
                </div>
                <!-- card-body end// -->
            </div>
            <!-- card end// -->
        </div>
        <div class="col-md-3">
            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="mb-3">Create</h5>
                    <form action="/admin/addCategory" method="post" onsubmit="return handleFormSubmit(event)">
                        <div class="mb-4">
                            <label for="name" class="form-label">Name</label>
                            <input type="text" placeholder="Type here" class="form-control" name="name" id="name" />
                        </div>
                        <div class="mb-4">
                            <label for="description" class="form-label">Description</label>
                            <input type="text" placeholder="Type here" class="form-control" name="description" id="descriptionId" />
                        </div>
                        <p class="error-message" id="error-message"></p>
                        <button type="submit" class="form-control bg-success" id="order_customer_1">ADD</button>
                       
                    </form>
                </div>
            </div>
            <!-- card end// -->
        </div>
    </div>
    <div class="pagination-area mt-15 mb-50">
        <nav aria-label="Page navigation example">
            <ul class="pagination justify-content-start">
                <%for(let i=1;i<=totalPages;i++){%>
                <li class="page-item <%=(i===currentPage) ? 'active' : ''%>" >
                    <a class="page-link" href="?page=<%= i %>"><%=i%></a>
                </li>
                <%}%>
            </ul>
        </nav>
    </div>
</section>
<!-- content-main end// -->
